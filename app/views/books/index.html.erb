<%= render "shared/header" %>

<div class='main'>

  <div class='title-contents'>
    <h2 class='service-title'>
      bookdockが読書を変える
    </h2>
    <p class='service-explain'>
      読書記録はもちろん、積読本をかんたんに出品・購入できる
    </p>
  </div>

  <%# 読書一覧 %>
  <div class='book-contents'>
    <h2 class='title'>本日のおすすめ</h2>
    <div class="subtitle" >
      読書投稿一覧
    </div>
    <ul class='book-lists'>
      <% @books.each do |book| %>
      <li class='list'>
        <%= link_to book_path(book.id) do %>
        <div class='book-img-content'>
          <%= image_tag book.image_url,  class: "book-img" %>
        </div>
        <div class='book-info'>
          <h3 class='book-name'>
            <%= book.title %>
          </h3>
          <a href="/users/<%= book.user.id %>">
            <span>投稿者</span><%= book.user.nickname %>
          </a>
          <div class='star-btn'>
            <%= image_tag "star.png", class:"star-icon" %>
            <span class='star-count'>
              <%= book.favorites.count %>いいね
            </span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /読書一覧 %>

  <%# /古本一覧 %>
  <div class='book-contents'>
    <h2 class='title'>本日のおすすめ</h2>
    <div class="subtitle" >
      古本出品一覧
    </div>
    <ul class='book-lists'>
          <% @old_books.each do |old_book| %>
      <li class='list'>
        <%= link_to old_book_path(old_book.id) do %>
        <div class='book-img-content'>
          <%= image_tag old_book.image.variant(resize: '400x400'), class: "book-img" %>
          <%if old_book.order.present?%>
          <div class='sold-out'>
            <span>SOLD OUT</span>
          </div>
          <%end%>
        </div>
        <div class='book-info'>
          <h3 class='book-name'>
            <%= old_book.old_title %>
          </h3>
          <h3 class='book-price'>
            <%= old_book.price %>円<br>
          </h3>
          <a href="/users/<%= old_book.user.id %>">
            <span>出品者</span><%= old_book.user.nickname %>
          </a>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /古本一覧 %>

  <div class='ad-contents'>
    <h2 class='service-title'>
      読書か、出品か
    </h2>
    <p class='service-explain'>
      いつかのあの本に出会えるかもしれません
    </p>
  </div>

</div>
<%= render "shared/footer" %>
<%= render "shared/header" %>

<div class='main'>

  <div class='title-contents'>
    <h2 class='service-title'>
      bookdockが読書を変える
    </h2>
    <p class='service-explain'>
      読書記録はもちろん、積読本をかんたんに出品・購入できる
    </p>
  </div>

  <%# 読書一覧 %>
  <div class='book-contents'>
    <h2 class='title'>本日のおすすめ</h2>
    <div class="subtitle" >
      読書レビュー
    </div>
    <ul class='book-lists'>
      <% @books.each do |book| %>
      <li class='list'>
        <%= link_to book_path(book.id) do %>
        <div class='book-img-content'>
          <%= image_tag book.image_url %>
        </div>
        <div class='book-info'>
          <h3 class='book-name'>
            <%= book.title %>
            <%# <%= image_tag book.image_url %>
          </h3>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /読書一覧 %>

  <%# /古本一覧 %>
  <div class='book-contents'>
    <h2 class='title'>本日のおすすめ</h2>
    <div class="subtitle" >
      古本一覧
    </div>
    <ul class='book-lists'>
    </ul>
  </div>

  <%# /古本一覧 %>

</div>
<%= render "shared/footer" %>
<%= render "shared/header" %>

  <%= form_with model: @book, url:  books_path, method: :post, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>


  <%# 本のレビュー %>
  <div class="books-contents">
    <div class="books-detail">
      <div class="form">
        <%= image_tag @book.image_url %>
        <div class="weight-bold-text">
        <h2>タイトル</h2>
          <span class="indispensable"></span>
        </div>
        <%= @book.title %>
        <div class="weight-bold-text">
        <h2>ISBN</h2>
          <span class="indispensable"></span>
        </div>
        <%= @book.isbn %>
        <div class="weight-bold-text">
        <h2>著者</h2>
          <span class="indispensable"></span>
        </div>
        <%= @book.author %>
        <div class="weight-bold-text">
        <h2>出版社</h2>
          <span class="indispensable"></span>
        </div>
        <%= @book.publisher %>
        <div class="weight-bold-text">
          <h2>読書状況</h2>
          <span class="indispensable"></span>
        </div>
        <%= f.collection_select(:read_status_id, ReadStatus.all, :id, :name, {}, {class:"genre-select"}) %>
        <div class="weight-bold-text">
          <h2>読書レビュー</h2>
          <span class="indispensable"></span>
        </div>
        <%= f.text_area :book_review, class:"items-text", id:"book-info", placeholder:"読書レビュー" ,rows:"7" ,maxlength:"1000" %>
        <%= hidden_field_tag :isbn, @book.isbn %>
        <%= hidden_field_tag :title, @book.title %>
        <%= hidden_field_tag :author, @book.author %>
        <%= hidden_field_tag :publisher, @book.publisher %>
        <%= hidden_field_tag :image_url, @book.image_url %>
        <%= hidden_field_tag :item_url, @book.item_url %>
      </div>
    </div>
  <%# /本のレビュー %>
    <%= f.submit "投稿する" ,class:"sell-btn" %> 

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>

<%= render "shared/footer" %>
<%= render "shared/header" %>

<div class='main'>

  <%# 読書一覧 %>
  <div class='book-contents'>
    <div class="subtitle" >
      <%= @nickname %>さんの読書投稿一覧
    </div>
    <ul class='book-lists'>
      <% @books.each do |book| %>
      <li class='list'>
        <%= link_to book_path(book.id) do %>
        <div class='book-img-content'>
          <%= image_tag book.image_url,  class: "book-img" %>
        </div>
        <div class='book-info'>
          <h3 class='book-name'>
            <%= book.title %>
          </h3>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /読書一覧 %>

  <%# /古本一覧 %>
  <div class='book-contents'>
    <div class="subtitle" >
      <%= @nickname %>さんの古本出品一覧
    </div>
    <ul class='book-lists'>
          <% @old_books.each do |old_book| %>
      <li class='list'>
        <%= link_to old_book_path(old_book.id) do %>
        <div class='book-img-content'>
          <%= image_tag old_book.image.variant(resize: '400x400'), class: "book-img" %>
          <%if old_book.order.present?%>
          <div class='sold-out'>
            <span>SOLD OUT</span>
          </div>
          <%end%>
        </div>
        <div class='book-info'>
          <h3 class='book-name'>
            <%= old_book.old_title %>
          </h3>
          <h3 class='book-price'>
            <%= old_book.price %>円<br>
          </h3>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /古本一覧 %>

</div>
<%= render "shared/footer" %>